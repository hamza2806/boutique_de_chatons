<%-# commented line  if current_user.id !== user.id  %>
<div class='container empty'>
  <h1>Email : <%= @user.email%></h1>
  <br/>
      <%= button_to "Editer mes informations", edit_user_registration_path(current_user), class: "btn btn-outline-secondary", :method => "get" %>

<div class="container" style="display: flex; flex-wrap: wrap; justify-content: space-around; height: 100%">
  <% @orders.each_with_index do |order, index| %>
    <div class="card border-primary my-2">
      <div class="card-header d-flex justify-content-between"> <span> <strong>Référence commande: <%= order.id %> </strong></span> <span> Date : <%= order.created_at.strftime("%m/%d/%Y") %> </span> </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <% order.items.each_with_index do |item, index| %>
          <li class="list-group-item d-flex justify-content-between">
            <span> Article: "<%= item.title %>"</span>
            <span> Prix unitaire: <%= item.price %></span>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="card-footer d-flex justify-content-end"> <strong> Prix total de la commande :<%= order.id %> </strong></div>
    </div>
  <% end %>
</div>

</div>
